@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">MP4 to AC3 Conversion</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ConvertMp4ToAc3" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="mp4File">Select an MP4 file:</label>
                            <input type="file" name="mp4File" id="mp4File" class="form-control" accept=".mp4" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Convert to AC3</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

